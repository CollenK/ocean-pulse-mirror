# Ocean PULSE Data Service Environment Variables

# Debug mode (set to false in production)
DEBUG=false

# CORS origins (comma-separated for multiple)
CORS_ORIGINS=["http://localhost:3000","https://ocean-pulse.vercel.app"]

# Copernicus Marine Service credentials (optional - for production)
# Register at: https://data.marine.copernicus.eu/register
COPERNICUS_USERNAME=
COPERNICUS_PASSWORD=

# Cache settings (in seconds)
CACHE_TTL_ENVIRONMENTAL=3600
CACHE_TTL_SPECIES=86400

# Protected Planet API (for MPA polygon boundaries)
# Request at: https://www.protectedplanet.net/en/resources/access-api
PROTECTED_PLANET_API_TOKEN=

# Supabase (for polygon updates - use service role key)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Pipeline API key (for protected refresh endpoints)
PIPELINE_API_KEY=
